{
  "name": "comsemrel",
  "version": "0.0.0",
  "description": "Tool for automating software releases",
  "main": "dist/comsemrel.js",
  "bin": "bin/comsemrel.js",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "pretest": "npm run lint",
    "test": "jest",
    "coverage": "codecov",
    "precommit": "npm test",
    "commitmsg": "commitplease .git/COMMIT_EDITMSG",
    "prebuild": "npm run test",
    "build": "rollup -c",
    "preversion": "npm run build && git add -f dist/",
    "postversion": "git rm -r --cached dist/ && git commit -m \"chore(dist): clean after release [ci skip]\" && git push origin && git push origin --tags",
    "prepublish": "in-publish && npm run build || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ComSemRel/comsemrel.git"
  },
  "keywords": [
    "comsemrel",
    "release",
    "automatic-release",
    "semantic-release",
    "semver"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ComSemRel/comsemrel/issues"
  },
  "homepage": "https://github.com/ComSemRel/comsemrel#readme",
  "files": [
    "bin/",
    "dist/"
  ],
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/tests/.*\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "codecov": "^2.1.0",
    "commitplease": "^3.1.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.0",
    "in-publish": "^2.0.0",
    "jest": "^20.0.0",
    "rollup": "^0.41.5",
    "rollup-plugin-typescript": "^0.8.1",
    "ts-jest": "^20.0.0",
    "tslint": "^5.2.0",
    "typescript": "^2.2.1"
  }
}
